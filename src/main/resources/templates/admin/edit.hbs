{{#partial "title"}}Signed in{{/partial}}

{{#partial "content"}}

   <section>
        <div class="container">
            <div class="edit-entry">
                <h2>Edit Entry</h2>
                <form action="/detail/{{ blogEntry.slug }}/admin/edit" method="post">
                    <label for="title"> Title</label>
                    <input type="text" name="title" value="{{ blogEntry.title }}"><br>

                    <label for="creator"> Name</label>
                    <input type="text" name="creator" value="{{ blogEntry.creator }}"><br>

                    <label for="blogPost">Entry</label>
                    <textarea rows="5" name="blogPost" value="{{ blogEntry.blogPost }}"></textarea>

                    <input type="submit" value="Save Entry" class="button">
                    <a href="/" class="button button-secondary">Cancel</a>
                </form>

                <div class="container">
                <form action="/admin/edit/{{ blogEntry.slug }}/delete" method="post">
                    <input type="submit" value="Delete Entry" class="button">
                </form>
                </div>
            </div>
       </div>
    </section>

   <section class="entry-tags">
       <div class="container">
           <div class="new-tag">
               <form action="/admin/edit/{{ blogEntry.slug }}/tag" method="post">
                   <input type="text" name="tag"><br>
                   <label for="tag">Tag</label>
                   <input type="submit" value="Add Tag" class="button">
               </form>
           </div>
       </div>
   </section>

{{/partial}}

{{> base.hbs}}