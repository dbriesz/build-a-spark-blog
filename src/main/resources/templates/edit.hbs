{{#partial "content"}}
    {{#if username }}
        <h1>Welcome {{username}}!</h1>

    {{ else }}
        <h1>Welcome Comic Book Enthusiasts!</h1>
        <form action="/password" method="blogPost">
            <input type="text" placeholder="What's your user name?" name="username">
            <button>Sign in</button>
        </form>
    {{/if}}
{{/partial}}

<div class="container">
    <div class="edit-entry">
        <h2>Edit Entry</h2>
        <form>
            <label for="title"> Title</label>
            <input type="text" name="title"><br>
            <label for="entry">Entry</label>
            <textarea rows="5" name="entry"></textarea>
            <input type="submit" value="Save Entry" class="button">
            <a href="#" class="button button-secondary">Cancel</a>
        </form>
    </div>
</div>

{{> base.hbs}}