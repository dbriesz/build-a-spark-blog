{{#partial "content"}}

        <h1>Welcome {{username}}!</h1>

        <form action="/edit" method="post">

            <h1>New Blog Entry</h1>

            <fieldset>

                <label for="title">Blog entry title:</label>
                <input type="text" id="entry_title" name="title">

                <label for="creator">Your name:</label>
                <input type="text" id="name" name="creator">

                <label for="blogPost">Blog entry content:</label>
                <textarea id="content" name="blogPost"></textarea>

            </fieldset>

            <button type="submit">Submit</button>

        </form>

{{/partial}}


