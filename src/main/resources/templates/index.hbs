{{#partial "content"}}
    <ul>
        {{#each entries}}
            <li>{{ title }}</li>
            <li>{{ creator }}</li>
            <li>{{ blogPost }}</li>
        {{/each}}
    </ul>

    <form action="/new" method="post">
        <input type="text" placeholder="Your blog entry title" name="title">
        <input type="text" placeholder="What is your name?" name="creator">
        <input type="text" placeholder="Enter your post content here" name="blogPost">
        <button>Submit</button>
    </form>
{{/partial}}

{{> base.hbs}}